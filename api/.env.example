# Server Configuration
ENVIRONMENT=development
PORT=8080

# Timeouts (in seconds)
READ_TIMEOUT=15
WRITE_TIMEOUT=15
IDLE_TIMEOUT=60
SHUTDOWN_TIMEOUT=20

# CORS Configuration
ALLOWED_ORIGINS=*
ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS
ALLOWED_HEADERS=Accept,Authorization,Content-Type

# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/jibe?sslmode=disable

# JWT Configuration
JWT_SECRET=your-secret-key-change-this-in-production

